{
  "name": "hostel-management",
  "version": "1.0.0",
  "description": "Login Portal",
  "main": "server.js",
  "scripts": {
    "test": "NODE_ENV=test jest __tests__ --forceExit",
    "test:watch": "jest --watchAll --forceExit",
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/starkblaze01/Hostel-Management.git"
  },
  "author": "Mayank Pathela",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/starkblaze01/Hostel-Management/issues"
  },
  "homepage": "https://github.com/starkblaze01/Hostel-Management#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "bootstrap": "^5.3.7",
    "bootstrap-icons": "^1.13.1",
    "concurrently": "^5.3.0",
    "dotenv": "^17.2.0",
    "express": "^4.16.4",
    "gravatar": "^1.8.1",
    "jsonwebtoken": "^9.0.0",
    "jwt-decode": "^3.1.2",
    "mongoose": "^5.7.5",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "jest": "^26.6.1",
    "nodemon": "^2.0.22",
    "supertest": "^6.0.0"
  }
}
